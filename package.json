{
  "name": "framesync",
  "version": "3.1.3",
  "description": "A tiny frame scheduler for performantly batching reads and renders",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json 'src/**/*.{ts}'",
    "test": "jest",
    "prepublish": "npm run lint && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Popmotion/framesync.git"
  },
  "keywords": [
    "popmotion",
    "animation",
    "raf"
  ],
  "author": "Matt Perry",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Popmotion/framesync/issues"
  },
  "homepage": "https://github.com/Popmotion/framesync#readme",
  "devDependencies": {
    "jest": "^20.0.4",
    "ts-jest": "^20.0.10",
    "typescript": "^2.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/_tests/.*\\.(ts|tsx|js)$"
  }
}
